					<label for="adName">상품명</label> <input type="text" id="adName"
						name="adName" value="${advertise.adName}" />
				</div>
				<div class="inputArea">
					<label for="adPrice">상품가격</label> <input type="text" id="adPrice"
						name="adPrice" value="${advertise.adPrice}" />
				</div>
				<div class="inputArea">
