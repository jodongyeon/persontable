<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberManageMapper">
	<select id="listPage" resultType="spring.web.vo.MemberManageVO"
		parameterType="spring.web.vo.SearchCriteria">
		SELECT USERID,
		USERNAME,
		PHONENUMBER,
		ZIP,
		BIRTHDAY,
		ADDR1,
		ADDR2,
		EMAIL,
		AUTHORITY
		FROM (
		SELECT USERID,
		USERNAME,
		PHONENUMBER,
		ZIP,
		BIRTHDAY,
		ADDR1,
		ADDR2,
		EMAIL,
		AUTHORITY,
		ROW_NUMBER() OVER(ORDER BY USERID DESC) AS RNUM
		FROM MEMBER
		WHERE 1=1
		<include refid="search"></include>
		)
		WHERE RNUM BETWEEN #{rowStart} AND #{rowEnd}
		ORDER BY USERID DESC
	</select>
	<select id="listCount"
		parameterType="spring.web.vo.SearchCriteria" resultType="int">
		SELECT COUNT(USERID)
		FROM MEMBER
		WHERE 1=1
		<include refid="search"></include>
		AND USERID > 0
	</select>
	<select id="read" resultType="spring.web.vo.MemberManageVO">
		SELECT USERID,
		USERNAME,
		PHONENUMBER,
		ZIP,
		BIRTHDAY,
		ADDR1,
		ADDR2,
		EMAIL,
		AUTHORITY
		FROM (
		SELECT
		USERID,
		USERNAME,
		PHONENUMBER,
		ZIP,
		BIRTHDAY,
		ADDR1,
		ADDR2,
		EMAIL,
		AUTHORITY
		FROM MEMBER
		WHERE USERID = #{userId}
	</select>
	<update id="update" parameterType="spring.web.vo.MemberManageVO">
		UPDATE MEMBER
		SET PHONENUMBER = #{PHONENUMBER},
		ZIP = #{ZIP}
		BIRTHDAY = #{BIRTHDAY}
		ADDR1 = #{ADDR1}
		ADDR2 = #{ADDR2}
		EMAIL = #{EMAIL}
		AUTHORITY = #{AUTHORITY}
		WHERE USERID = #{USERID}
	</update>
	<delete id="delete">
		DELETE
		FROM MEMBER
		WHERE USERID = #{userId}
	</delete>
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 't'.toString()">AND TITLE LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'c'.toString()">AND CONTENT LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'w'.toString()">AND WRITER LIKE '%' || #{keyword} || '%'</if>
			<if test="searchType == 'tc'.toString()">AND (TITLE LIKE '%' || #{keyword} || '%') or (CONTENT
				LIKE '%' || #{keyword} || '%')</if>
		</if>
	</sql>
</mapper>